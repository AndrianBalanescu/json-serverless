{
  "compilerOptions": {
    "incremental": false,
    "moduleResolution": "node",
    "target": "es5",
    "declaration": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "outDir": "lib",
    "rootDir": "./",
    "composite": false,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "lib": ["es2015"],
    "sourceMap": false,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "example/**/*.ts"],
  "exclude": ["tests"]
}
